<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/fragmentGoalFriendsProgressTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:text="Прогресс Друзей"
        android:textSize="16sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/fragmentGoalFriendsProgressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fragmentGoalFriendsProgressTitle"
        android:text="Цель: "
        android:maxLines="3"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentGoalFriendsProgressRecyclerView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentGoalFriendsProgressText" />

    <Button
        android:id="@+id/fragmentGoalFriendsProgressCloseButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ОК"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentGoalFriendsProgressRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>